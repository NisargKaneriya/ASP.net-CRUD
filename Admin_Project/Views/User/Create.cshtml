@model UserModel

<div class="d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card w-50">
        <div class="card-body">
            <h5 class="card-title text-center">@(Model.UserID == null ? "Add User" : "Edit User")</h5>

            <!-- General Form Elements -->
            <form asp-action="UserSave" method="post" asp-controller="User">
                <div class="row mb-3">
                    <label for="inputUserID" class="col-sm-4 col-form-label">User ID</label>
                    <div class="col-sm-8">
                        <input asp-for="UserID" type="hidden" class="form-control" id="inputUserID">
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputUserName" class="col-sm-4 col-form-label">User Name</label>
                    <div class="col-sm-8">
                        <input asp-for="UserName" type="text" class="form-control" id="inputUserName">
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputEmail" class="col-sm-4 col-form-label">Email</label>
                    <div class="col-sm-8">
                        <input asp-for="Email" type="email" class="form-control" id="inputEmail">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputPassword" class="col-sm-4 col-form-label">Password</label>
                    <div class="col-sm-8">
                        <input asp-for="Password" type="password" class="form-control" id="inputPassword">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputMobileNo" class="col-sm-4 col-form-label">Mobile No</label>
                    <div class="col-sm-8">
                        <input asp-for="MobileNo" type="tel" class="form-control" id="inputMobileNo">
                        <span asp-validation-for="MobileNo" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputAddress" class="col-sm-4 col-form-label">Address</label>
                    <div class="col-sm-8">
                        <textarea asp-for="Address" class="form-control" id="inputAddress"></textarea>
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputIsActive" class="col-sm-4 col-form-label">Is Active</label>
                    <div class="col-sm-8">
                        <input asp-for="IsActive" type="checkbox" class="form-check-input" id="inputIsActive">
                        
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-12 text-center">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <a class="btn btn-danger btn-sm"
                           asp-controller="User" asp-action="UserList" onclick="return Cancel()">

                            Cancel
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<script>
    function Cancel() {
        return confirm("Move Back");
    }
</script>
