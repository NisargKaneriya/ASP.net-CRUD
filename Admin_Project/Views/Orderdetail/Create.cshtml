@model OrderdetailModel

<div class="d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card w-50">
        <div class="card-body">
            <h5 class="card-title text-center">@(Model.OrderDetailID == null ? "Add OrderDetail" : "Edit OrderDetail")</h5>

            <!-- General Form Elements -->
            <form asp-action="OrderdetailSave" method="post" asp-controller="Orderdetail">
                <div class="row mb-3">
                    <label for="inputOrderDetailID" class="col-sm-4 col-form-label">Order Detail ID</label>
                    <div class="col-sm-8">
                        <input asp-for="OrderDetailID" type="hidden" class="form-control" id="inputOrderDetailID">
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputOrderID" class="col-sm-4 col-form-label">OrderID</label>
                    <select asp-for="OrderID"
                            asp-items="@(new SelectList(ViewBag.OrderDropDown , "OrderID" , "OrderNumber" ))"
                            class="form-select">
                        <option value="">Select Order</option>
                    </select>
                    <span asp-validation-for="OrderID" class="text-danger"></span>
                </div>
                <div class="row mb-3">
                    <label for="inputProductID" class="col-sm-4 col-form-label">ProductID</label>
                    <select asp-for="ProductID"
                            asp-items="@(new SelectList(ViewBag.ProductDropDown , "ProductID" , "ProductName" ))"
                            class="form-select">
                        <option value="">Select Product</option>
                    </select>
                    <span asp-validation-for="ProductID" class="text-danger"></span>
                </div>
                <div class="row mb-3">
                    <label for="inputQuantity" class="col-sm-4 col-form-label">Quantity</label>
                    <div class="col-sm-8">
                        <input asp-for="Quantity" type="number" class="form-control" id="inputQuantity">
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputAmount" class="col-sm-4 col-form-label">Amount</label>
                    <div class="col-sm-8">
                        <input asp-for="Amount" type="number" class="form-control" id="inputAmount">
                        <span asp-validation-for="Amount" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputTotalAmount" class="col-sm-4 col-form-label">Total Amount</label>
                    <div class="col-sm-8">
                        <input asp-for="TotalAmount" type="number" class="form-control" id="inputTotalAmount">
                        <span asp-validation-for="TotalAmount" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputUserID" class="col-sm-4 col-form-label">User Name</label>
                    <select asp-for="UserID"
                            asp-items="@(new SelectList(ViewBag.UserDropDown , "UserID" , "UserName" ))"
                            class="form-select">
                        <option value="">Select User</option>
                    </select>
                    <span asp-validation-for="UserID" class="text-danger"></span>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-12 text-center">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <a class="btn btn-danger btn-sm"
                           asp-controller="Orderdetail" asp-action="OrderdetailList" onclick="return Cancel()">

                            Cancel
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<script>
    function Cancel() {
        return confirm("Move Back");
    }
</script>
