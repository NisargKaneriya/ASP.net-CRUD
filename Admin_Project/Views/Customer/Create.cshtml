@model CustomerModel

<div class="d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card w-50">
        <div class="card-body">
            <h5 class="card-title text-center">@(Model.CustomerID == null ? "Add Customer" : "Edit Customer")</h5>

            <!-- Customer Form Elements -->
            <form asp-action="CustomerSave" method="post" asp-asp-controller="Customer">
                <div class="row mb-3">
                    <label for="inputCustomerID" class="col-sm-4 col-form-label">Customer ID</label>
                    <div class="col-sm-8">
                        <input asp-for="CustomerID" type="hidden" class="form-control" id="inputCustomerID">
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputCustomerName" class="col-sm-4 col-form-label">Customer Name</label>
                    <div class="col-sm-8">
                        <input asp-for="CustomerName" type="text" class="form-control" id="inputCustomerName">
                        <span asp-validation-for="CustomerName" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputHomeAddress" class="col-sm-4 col-form-label">Home Address</label>
                    <div class="col-sm-8">
                        <textarea asp-for="HomeAddress" class="form-control" id="inputHomeAddress"></textarea>
                        <span asp-validation-for="HomeAddress" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputEmail" class="col-sm-4 col-form-label">Email</label>
                    <div class="col-sm-8">
                        <input asp-for="Email" type="email" class="form-control" id="inputEmail">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputMobileNo" class="col-sm-4 col-form-label">Mobile Number</label>
                    <div class="col-sm-8">
                        <input asp-for="MobileNo" type="text" class="form-control" id="inputMobileNo">
                        <span asp-validation-for="MobileNo" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputGSTNO" class="col-sm-4 col-form-label">GST Number</label>
                    <div class="col-sm-8">
                        <input asp-for="GST_NO" type="text" class="form-control" id="inputGSTNO">
                        <span asp-validation-for="GST_NO" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputCityName" class="col-sm-4 col-form-label">City Name</label>
                    <div class="col-sm-8">
                        <input asp-for="CityName" type="text" class="form-control" id="inputCityName">
                        <span asp-validation-for="CityName" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputPinCode" class="col-sm-4 col-form-label">Pin Code</label>
                    <div class="col-sm-8">
                        <input asp-for="PinCode" type="text" class="form-control" id="inputPinCode">
                        <span asp-validation-for="PinCode" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputNetAmount" class="col-sm-4 col-form-label">Net Amount</label>
                    <div class="col-sm-8">
                        <input asp-for="NetAmount" type="number" step="0.01" class="form-control" id="inputNetAmount">
                        <span asp-validation-for="NetAmount" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputUserID" class="col-sm-4 col-form-label">User Name</label>
                    <select asp-for="UserID"
                            asp-items="@(new SelectList(ViewBag.UserDropDown , "UserID" , "UserName" ))"
                            class="form-select">
                        <option value="">Select User</option>
                    </select>
                    <span asp-validation-for="UserID" class="text-danger"></span>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-12 text-center">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <a class="btn btn-danger btn-sm"
                           asp-controller="Customer" asp-action="CustomerList" onclick="return Cancel()">

                            Cancel
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<script>
    function Cancel() {
        return confirm("Move Back");
    }
</script>
