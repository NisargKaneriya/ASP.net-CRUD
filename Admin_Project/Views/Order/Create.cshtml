@model OrderModel

<div class="d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card w-50">
        <div class="card-body">
            <h5 class="card-title text-center">@(Model.OrderID == null ? "Add Order" : "Edit Order")</h5>

            <!-- General Form Elements -->
            <form asp-action="OrderSave" method="post" asp-controller="Order">
                <div class="row mb-3">
                    <label for="inputOrderID" class="col-sm-4 col-form-label">Order ID</label>
                    <div class="col-sm-8">
                        <input asp-for="OrderID" type="hidden" class="form-control" id="inputOrderID">
                    </div>
                </div>
               
                <div class="row mb-3">
                    <label for="inputOrderDate" class="col-sm-4 col-form-label">Order Date</label>
                    <div class="col-sm-8">
                        <input asp-for="OrderDate" type="date" class="form-control" id="inputOrderDate">
                        <span asp-validation-for="OrderDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputCustomerID" class="col-sm-4 col-form-label">Customer Name</label>
                    <select asp-for="CustomerID"
                            asp-items="@(new SelectList(ViewBag.CustomerDropDown , "CustomerID" , "CustomerName" ))"
                            class="form-select">
                        <option value="">Select Customer</option>
                    </select>
                    <span asp-validation-for="CustomerID" class="text-danger"></span>
                </div>
                <div class="row mb-3">
                    <label for="inputPaymentMode" class="col-sm-4 col-form-label">Payment Mode</label>
                    <div class="col-sm-8">
                        <select asp-for="PaymentMode" class="form-select" id="inputPaymentMode">
                            <option value="">Select Payment Mode</option>
                            <option value="CreditCard">Credit Card</option>
                            <option value="DebitCard">Debit Card</option>
                            <option value="PayPal">PayPal</option>
                            <option value="CashOnDelivery">Cash on Delivery</option>
                        </select>
                        <span asp-validation-for="PaymentMode" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputTotalAmount" class="col-sm-4 col-form-label">Total Amount</label>
                    <div class="col-sm-8">
                        <input asp-for="TotalAmount" type="number" class="form-control" id="inputTotalAmount">
                        <span asp-validation-for="TotalAmount" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputShippingAddress" class="col-sm-4 col-form-label">Shipping Address</label>
                    <div class="col-sm-8">
                        <textarea asp-for="ShippingAddress" class="form-control" id="inputShippingAddress"></textarea>
                        <span asp-validation-for="ShippingAddress" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputUserID" class="col-sm-4 col-form-label">User Name</label>
                    <select asp-for="UserID"
                            asp-items="@(new SelectList(ViewBag.UserDropDown , "UserID" , "UserName" ))"
                            class="form-select">
                        <option value="">Select User</option>
                    </select>
                    <span asp-validation-for="UserID" class="text-danger"></span>
                </div>
                 <div class="row mb-3">
                    <label for="inputOrderNumber" class="col-sm-4 col-form-label">OrderNo</label>
                    <div class="col-sm-8">
                        <input asp-for="OrderNumber" type="text" class="form-control" id="inputCustomerName">
                        <span asp-validation-for="OrderNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-12 text-center">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <a class="btn btn-danger btn-sm"
                           asp-controller="Order" asp-action="OrderList" onclick="return Cancel()">

                            Cancel
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<script>
    function Cancel() {
        return confirm("Move Back");
    }
</script>
